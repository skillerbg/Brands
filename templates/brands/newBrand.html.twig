{% extends 'base.html.twig' %}

{% block title %}Hello BrandsController!
{% endblock %}

{% block body %}

    {{ form_start(form) }}


    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

    <script src="{{ asset('js/brands_form.js') }}" type="text/javascript"></script>


    <!------ Include the above in your HEAD tag ---------->

    <div class="container">

        <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Add new brand</div>
                </div>
                <div class="panel-body">
                    <form method="post" action=".">
                        <input type='hidden' name='csrfmiddlewaretoken' value='XFe2rTYl9WOpV8U6X5CfbIuOZOELJ97S'/>


                        <div id="div_id_username" class="form-group required">
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.brand_name, {'attr': {'class': 'input-md  textinput textInput form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <div id="div_id_email" class="form-group required">
                            <div class="row ">
                                <div class="col-md-6">
                                    {{ form_row(form.logo, {'attr': {'class': 'input-md  textinput textInput form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <div id="div_id_category0" class="form-row required" style="padding-left: 6px; padding-bottom: 16px;">
                            <div class="row  ">
                                <div class="col">
                                    {{ form_row(form.Category, { attr: {
            'data-specific-location-url': path('category_select'),
            'class': 'js-article-form-location form-control form-control-lg'
        }}) }}
                                </div>
                          
                        <div class="js-specific-location-target">

                            {%  if form.SubCategory1 is defined %}
                                {{ form_row(form.SubCategory1, {'attr': {'class': 'form-control form-control-lg'}}) }}


                            {% endif %}
                        </div>

                          </div>
                        </div>
                        <div id="div_id_description" class="form-group ">

                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.description, {'attr': {'class': 'input-md  textinput textInput form-control', 'rows': '3'}}) }}
                                </div>
                            </div>
                        </div>

                        <div id="div_id_wepagelink" class="form-group ">
                            <div class="row ">
                                <div class="col-md-6">
                                    {{ form_row(form.wepagelink, {'attr': {'class': 'input-md  textinput textInput form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div id="div_id_facebooklink" class="form-group ">
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.facebooklink, {'attr': {'class': 'input-md  textinput textInput form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <div id="div_id_twitterlink" class="form-group ">
                            <div class="row ">
                                <div class="col-md-6">
                                    {{ form_row(form.twitterlink, {'attr': {'class': 'input-md  textinput textInput form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div id="div_id_instagramlink" class="form-group ">
                            <div class="row ">
                                <div class="col-md-6">
                                    {{ form_row(form.instagramlink, {'attr': {'class': 'input-md  textinput textInput form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="aab controls col-md-4 "></div>
                            <div class="controls col-md-11 ">
                                {{ form_end(form, { 'attr': {'class': 'btn btn-primary btn btn-info'} }) }}
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>{% endblock %}
