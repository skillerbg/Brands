                             {{ form_row(form.SubCategory2, {'attr': {'class': 'form-control form-control-lg'}}) }}  
                                </div>  
                            </div>                       
                        </div>    

                        <div class="form-group"> 
                            <div class="aab controls col-md-4 "></div>
                            <div class="controls col-md-11 ">
                                {{ form_end(form, { 'attr': {'class': 'btn btn-primary btn btn-info'} }) }}
                            </div>
                        </div> 
                            
                   

                </form>
            </div>
        </div>
    </div> 
</div>
    





</div>            

