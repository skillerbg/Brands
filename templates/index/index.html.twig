{% extends 'base.html.twig' %}

{% block title %}Hello ReviewsController!{% endblock %}

{% block body %}

            <link href="{{ asset('css/rating.css') }}" rel="stylesheet"/>

    <script src="{{ asset('js/rating.js')  }}" type="text/javascript"></script>


<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
    <script src="{{ asset('js/index.js')  }}" type="text/javascript"></script>

    <div class="container">

        <h5 class="section-title h1">TOP BRANDS</h5>
        <div class="row">
        <div class="container">
        </div>
 {% for brands in brand %}
  
   

            <!-- Team member -->
            <div class="col-xs-12 col-sm-6 col-md-4 card-functions"  onclick="window.location = 'brand/{{brands.id}}'">
                <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                    <div class="mainflip">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><img class=" img-fluid" src="{{ brands.logo }}" alt="card image"></p>
                                    <h4 class="card-title">{{ brands.brandname|nl2br }}</h4>
                                     <input id="input-1" name="input-1" class="rating rating-loading" data-min="0" data-max="5" data-step="0.1" value="{{brands.rating}}">
                                    <h4 class="card-title">Reviews: {{ brands.totalreviews|nl2br }}</h4>                                </div>
                            </div>
                        </div>
                        <div class="backside">
                            <div class="card">
                                <div class="card-body text-center mt-4">
                                    <h4 class="card-title">{{ brands.brandname|nl2br }}</h4>
                                                                          
                                     <div class="row" style="width: 350px;">
                                            <div class="col-md-6">
                                                <label>Category</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> {{ brands.category|nl2br }}</p>
                                            </div>
                                        </div>
                                        {% if brands.subcategory %}

                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Sub category</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> {{ brands.subcategory|nl2br }}</p>
                                            </div>
                                        </div>
                                        {% endif %}

                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Average rating</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> {{ brands.rating|round(1, 'floor') }}</p>
                                            </div>
                                        </div>
                                        
                                    <ul class="list-inline">
                                    
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank" href="http://{{ brands.facebooklink }}">
                                                <i class="fa fa-facebook"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank" href="http://{{ brands.twitterlink }}">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="social-icon text-xs-center" target="_blank" href="http://{{ brands.instagramlink }}">
                                                <i class="fa fa-instagram"></i>
                                            </a>
                                        </li>
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ./Team member -->
            {% endfor %}

</div>

{% endblock %}
