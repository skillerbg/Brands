                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><img class=" img-fluid" src="{{ brands.logo }}" alt="card image"></p>
                                    <h4 class="card-title">{{ brands.brandname|nl2br }}</h4>
